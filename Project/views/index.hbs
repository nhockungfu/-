{{#section 'quangCao'}}
    <div class="col-md-8 poser-quang-cao" style="padding:0px">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img class="anh-slide" src="/images/banner/one.png" alt="Detail 1">
                    <div class="carousel-caption">
                        <h3 class="name-of-detail">Tên Poster 01</h3>
                        <p class="name-of-detail">nội dung mô tả sẽ được viết ở đây</p>
                    </div>
                </div>

                <div class="item">
                    <img class="anh-slide" src="/images/banner/two.png" alt="Detail 2">
                    <div class="carousel-caption">
                        <h3 class="name-of-detail">Tên Poster 02</h3>
                        <p class="name-of-detail">nội dung mô tả sẽ được viết ở đây</p>
                    </div>
                </div>

                <div class="item">
                    <img class="anh-slide" src="/images/banner/three.png" alt="Detail 3">
                    <div class="carousel-caption">
                        <h3 class="name-of-detail">Tên Poster 03</h3>
                        <p class="name-of-detail">nội dung mô tả sẽ được viết ở đây</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-4 poser-quang-cao" style="padding:0px">
        <img class="poster-quang-cao-01" src="http://quangcaohieuqua.net/wp-content/uploads/2014/12/tvcn-ads.png" alt="">
    </div>
{{/section}}

