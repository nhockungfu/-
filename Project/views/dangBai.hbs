                        <div class="col-sm-5">
                            <input type="text" class="form-control" placeholder="Bắt đầu">
                        </div>
                        <div class="col-sm-5">
                            <input class="datepicker form-control" type="text" placeholder="Kết thúc">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Mô tả</label>
                        <div class="col-sm-10">
                            <textarea class="tinymce"></textarea>
                        </div>
