                            <input name="txt_tenSp" id="txt_tenSp" type="text" class="form-control" placeholder="Nhập tên sản phẩm">
                        </div>
                    </div>
                    <div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Giá bán</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="Khởi điểm">
                            </div>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" placeholder="Mua ngay">
                            </div>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" placeholder="Bước giá">
                            </div>
