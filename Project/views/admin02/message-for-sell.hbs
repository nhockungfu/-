
{{#section 'css'}}
    <link rel="stylesheet" type="text/css" href="/assests/css/admin.css">
{{/section}}


{{#section 'js'}}
    <script type="text/javascript" src="/assests/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/assests/js/admin_msg_for_sell.js"></script>
    <script type="text/javascript">
        $("#yeu-cau-ban").css('color','#B8E73F')
        $("#yeu-cau-ban").css('font-weight','bold')
    </script>
{{/section}}


<div class="scrollable">
    <form method="post" action="/admin/action-message-for-sell" id="frmInfoUser">
        <input type="hidden" id="user-id"  name="txtUserId"/>
        <input type="hidden" id="action-type"  name="txtAction"/>
    </form>
    <table class="table table-bordered text-center table-hover">
        <thead>
        <tr>
            <td>Mã số</td>
            <td>Tên người dùng</td>
            <td>Địa chỉ mail</td>
            <td>Lý do</td>
            <td>Thời gian gửi</td>
            <td>Thao tác</td>
        </tr>
        </thead>
        <tbody>
        {{#each listMessage}}
            <tr>
                <td>{{user_id}}</td>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>{{reason_for_sell}}</td>
                <td>{{send_time}}</td>
                <td>
                    <a class="btn-agree" id="{{user_id}}" href="#">Đồng ý</a> |
                    <a class="btn-cancel" id="{{user_id}}" href="#">Hủy bỏ</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

</div>